task autonomous()
{
  // .....................................................................................
  // Insert user code here.
  // .....................................................................................
motor[backLeft]=-127;
motor[backRight]=127;
motor[frontLeft]=127;
motor[frontRight]=-127;
wait1Msec(2000);
motor[backLeft]=0;
motor[backRight]=0;
motor[frontLeft]=0;
motor[frontRight]=0;
//	AutonomousCodePlaceholderForTesting();  // Remove this function call once you have "real" code.
