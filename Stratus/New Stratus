void auton5Red(){
	motor [intake1] = -127;
	motor [rightLiftTop] = -127;
	motor [rightLiftBottom] = -127;
	motor [leftLiftBottom] = -127;
	motor [leftLiftTop] = -127;
		wait1Msec (600);
		motor [intake1] = 0;
		wait1Msec (1);
	motor [frontLeft] = 127;
	motor [frontRight] = 127;
	motor [backLeft] = 127;
	motor [backRight] = 127;
		wait1Msec (1000);
	motor [frontLeft] = 0;
	motor [frontRight] = 0;
	motor [backLeft] = 0;
	motor [backRight] = 0;
		wait1Msec (1);
	motor [intake1] = -127;
		wait1Msec (1250);
	motor [intake1] = 0;
		wait1Msec (1);
	motor [hDrive] = -100;
		wait1Msec(3000);
	motor [hDrive] = 0;
		wait1Msec(1);
	motor [frontLeft] = 127;
	motor [frontRight] = -127;
	motor [backLeft] = 127;
	motor [backRight] = -127;
		wait1Msec (800);
	motor [frontLeft] = 0;
	motor [frontRight] = 0;
	motor [backLeft] = 0;
	motor [backRight] = 0;
		wait1Msec (1);
	motor [hDrive] = -100;
		wait1Msec(3000);
	motor [hDrive] = 0;
		wait1Msec(1);
	motor [rightLiftTop] = 0;
	motor [rightLiftBottom] = 0;
	motor [leftLiftBottom] = 0;
	motor [leftLiftTop] = 0;
		wait1Msec (1);
	motor [rightLiftTop] = 127;
	motor [rightLiftBottom] = 127;
	motor [leftLiftBottom] = 127;
	motor [leftLiftTop] = 127;
		wait1Msec (1500);
	motor [intake1] = 127;
		wait1Msec (3000);
	motor [intake1] = 0;
		wait1Msec (1);
	}
	void auton5Blue(){
	motor [intake1] = -127;
	motor [rightLiftTop] = -20;
	motor [rightLiftBottom] = -20;
	motor [leftLiftBottom] = -20;
	motor [leftLiftTop] = -20;
		wait1Msec (600);
		motor [intake1] = 0;
		wait1Msec (1);
	motor [frontLeft] = 127;
	motor [frontRight] = 127;
	motor [backLeft] = 127;
	motor [backRight] = 127;
		wait1Msec (1000);
	motor [frontLeft] = 0;
	motor [frontRight] = 0;
	motor [backLeft] = 0;
	motor [backRight] = 0;
		wait1Msec (1);
	motor [intake1] = -127;
		wait1Msec (1250);
	motor [intake1] = 0;
		wait1Msec (1);
	motor [hDrive] = 100;
		wait1Msec(2000);
	motor [hDrive] = 0;
		wait1Msec(1);
	motor [frontLeft] = -127;
	motor [frontRight] = 127;
	motor [backLeft] = -127;
	motor [backRight] = 127;
		wait1Msec (600);
	motor [frontLeft] = 0;
	motor [frontRight] = 0;
	motor [backLeft] = 0;
	motor [backRight] = 0;
		wait1Msec (1);
	motor [hDrive] = 100;
		wait1Msec(2750);
	motor [hDrive] = 0;
		wait1Msec(1);
	motor [rightLiftTop] = 0;
	motor [rightLiftBottom] = 0;
	motor [leftLiftBottom] = 0;
	motor [leftLiftTop] = 0;
		wait1Msec (1);
	lift(127);
		wait1Msec (1500);
	drive(127);
		wait1Msec (1000);
	drive (-50);
		wait1Msec (250);
	stopDrive ();
		wait1Msec (1);
	motor [intake1] = 127;
		wait1Msec (3000);
	motor [intake1] = 0;
		wait1Msec (1);
	stopAll ();
		wait1Msec (1);
	}
